# Core runtime
NODE_ENV=development
# Runtime mode: `full` (Postgres + Redis) or `lite` (in-process, no Docker)
APP_RUNTIME_MODE=full
APP_URL=http://localhost:3000
DATABASE_URL=postgres://postgres:postgres@localhost:5432/avatar_os
REDIS_URL=redis://localhost:6379
ENCRYPTION_KEY=replace-this-with-a-32-byte-minimum-encryption-key

# Auth.js session/auth
NEXTAUTH_URL=http://localhost:3000
AUTH_SECRET=replace-with-random-secret

# Auth.js GitHub sign-in (optional but recommended)
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=

# GitHub connector OAuth (optional; falls back to AUTH_GITHUB_* if omitted)
GITHUB_CONNECT_CLIENT_ID=
GITHUB_CONNECT_CLIENT_SECRET=

# OpenAI adapters (optional: if absent, mock adapters are used)
OPENAI_API_KEY=
OPENAI_CHAT_MODEL=gpt-4.1-mini
OPENAI_EMBED_MODEL=text-embedding-3-small
OPENAI_TTS_MODEL=gpt-4o-mini-tts

# S3-compatible storage (optional; local storage fallback if unset)
S3_ENDPOINT=
S3_REGION=us-east-1
S3_BUCKET=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# Webhook ingress (optional)
# Shared token for POST /api/hooks/* routes (Bearer token or x-openclaw-token header)
HOOKS_TOKEN=
# Default user id used by hooks when payload omits userId
HOOKS_DEFAULT_USER_ID=
